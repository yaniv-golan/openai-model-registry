{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "model": {
            "type": "string"
        },
        "currency": {
            "type": "string"
        },
        "scheme": {
            "type": "string",
            "enum": [
                "per_token",
                "per_minute",
                "per_image",
                "per_request"
            ]
        },
        "unit": {
            "type": "string",
            "enum": [
                "million_tokens",
                "minute",
                "image",
                "request"
            ]
        },
        "input_cost_per_unit": {
            "type": "number"
        },
        "output_cost_per_unit": {
            "type": "number"
        }
    },
    "required": [
        "model",
        "currency",
        "scheme",
        "unit",
        "input_cost_per_unit",
        "output_cost_per_unit"
    ],
    "additionalProperties": false
}
